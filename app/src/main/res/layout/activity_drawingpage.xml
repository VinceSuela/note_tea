<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".drawingpage">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle6"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        >

        <ImageView
            android:id="@+id/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/back"
            app:tint="#4D3131" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@+id/exit"
            android:textSize="30dp"
            android:text="Draw"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            app:tint="#4D3131"
            app:srcCompat="@drawable/dotsettings" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:layout_marginTop="22dp"
            android:layout_toStartOf="@+id/imageView17"
            app:srcCompat="@drawable/undo" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginRight="10dp"
            android:layout_toStartOf="@+id/imageView11"
            app:srcCompat="@drawable/redo" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#B6A0A0"
        android:layout_marginHorizontal="30dp"
        android:orientation="horizontal"
        android:layout_marginBottom="25dp"
        >


        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_marginTop="13dp"
            app:srcCompat="@drawable/eraser" />

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/pencil2" />

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_weight="1"
            android:layout_marginTop="17dp"
            app:srcCompat="@drawable/pen" />

        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginTop="18dp"
            app:srcCompat="@drawable/marker" />

        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="13dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/radio" />

    </LinearLayout>


</RelativeLayout>