<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0C8C8"
    tools:context=".loginpage">


    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:paddingTop="20dp"
        android:paddingLeft="15dp"
        android:background="#B6A0A0"
        android:textColor="#594444"
        android:text="Log In"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/tv1"
        android:text="Email"
        android:textColor="#594444"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@+id/tv2"
        android:ems="10"
        android:textColor="#4D3131"
        android:inputType="text"
        android:hint="Enter your Email"
        android:textColorHint="#9F8F8F"
        android:background="@drawable/rectangle10"
        />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/email"
        android:text="We'll never share your email."
        android:textColor="#9F8F8F"
        android:textStyle="bold"
        />


    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/tv3"
        android:textColor="#594444"
        android:text="Password"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/tv4"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle10"
        android:ems="10"
        android:textColor="#4D3131"
        android:inputType="text"
        android:paddingLeft="15dp"
        android:hint="Enter your Password"
        android:textColorHint="#9F8F8F" />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/password"
        android:text="Mininum 8 characters."
        android:textColor="#9F8F8F"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv5"
        android:background="@drawable/rectangle1"
        android:textColor="#4D3131"
        android:text="Forgot Password?"
        />

    <Button
        android:id="@+id/help"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/forgotPassword"
        android:background="@drawable/rectangle1"
        android:textColor="#4D3131"
        android:text="Help"
        />

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/help"
        android:background="@drawable/rectangle2"
        android:textColor="#E0C8C8"
        android:text="Login"
        />

    <ImageView
        android:id="@+id/newuser"
        android:clickable="true"
        android:onClick="newuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login"
        android:layout_marginLeft="5dp"
        app:srcCompat="@drawable/newuser" />


    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="#B6A0A0"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="160dp"
                android:layout_height="55dp"
                android:text="About Note:tea"
                android:paddingLeft="45dp"
                android:paddingTop="17dp"
                android:textColor="#594444"
                android:background="@drawable/rectangle4"
                android:textStyle="bold"
            />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/note"
                android:layout_marginLeft="15dp"
                android:paddingTop="15dp"
                />

        </RelativeLayout>


        <Space
            android:layout_width="25dp"
            android:layout_height="wrap_content"
             />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
                android:layout_width="160dp"
                android:layout_height="55dp"
                android:text="Contact Support"
                android:paddingLeft="45dp"
                android:textColor="#594444"
                android:paddingTop="18dp"
                android:textSize="14dp"
                android:background="@drawable/rectangle4"
                android:textStyle="bold"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/contact"
                android:layout_marginLeft="15dp"
                android:paddingTop="15dp"
                />

        </RelativeLayout>




    </LinearLayout>



</RelativeLayout>

